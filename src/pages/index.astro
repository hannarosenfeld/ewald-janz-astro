<style>
	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
		font-family: 'Open Sans', sans-serif;
	}

	ul {
		list-style: none;
	}

	body {
		max-width: 100vw;
		margin: 0;
		padding: 0;
	}

	main {
		margin: 0 auto;
		width: 100%;
		color: white;
		font-size: 20px;
		line-height: 1.6;
		color: #000000;
	}

	#vorname, #nachname {
		margin: 0 auto;
		display: flex;
	}

	.letter {
		cursor: pointer;
	} 

	.section {
		width: 100%;
		height: 100vh;
		margin: 0 auto;
		display: flex;
		padding: 10px;
	}

	#site-nav {
		flex-direction: column;
	}

	nav {
		width: fit-content;
		min-width: 20vw;
		height: 100%;
	}

	#works {
	}

	#cv {
        background-color: #f5f5f5; /* Light gray background */
        padding: 20px;
    }

	#cv-container {
		width: 100%;
		display: flex;
		margin: 0 auto;
		align-items: center;
		align-content: center;
	}

	#cv-container ul {
		width: fit-content;
		margin: 0 auto;
	}

    #cv h2 {
        font-size: 24px;
        color: #333; /* Dark text color */
    }

    #cv ul {
        list-style: none;
        padding-left: 20px;
    }

    #cv li {
        margin-bottom: 10px;
        font-size: 16px;
        color: #666; /* Slightly darker text color */
    }

    /* Style the bold years in the CV list */
    #cv li b {
        font-weight: bold;
        color: #000; /* Darker text color for years */
    }

	/* Mobile styles */
	@media (max-width: 768px) {
		body {
			width: 100vw !important;
		}
		main {
			font-size: 18px;
			width: 100vw !important;

		}
		.section {
			padding: 10px;
			width: 100vw !important;
		}
	}

	/* Tablet styles */
	@media (min-width: 769px) and (max-width: 1024px) {
	}

</style>
