---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import { Image } from 'astro:assets';
import E from "../../public/images/nav-images/1-E.png"
import W from "../../public/images/nav-images/2-W.png"
import A from "../../public/images/nav-images/3-A.png"
import L from "../../public/images/nav-images/4-L.png"
import D from "../../public/images/nav-images/5-D.png"
import J from "../../public/images/nav-images/6-J.png"
import A2 from "../../public/images/nav-images/7-A.png"
import N from "../../public/images/nav-images/8-N.png"
import Z from "../../public/images/nav-images/9-Z.png"

import Eworks from "../../public/images/nav-images/E-works.jpg"
---

<Layout title="Ewald Janz">
	<main>
		<div class="nav">
			<div class="vorname">
				<Image src={E} alt="E" height="310" densities={[1.5, 2]} class="letter"/>
				<Image src={W} alt="W" height="310" densities={[1.5, 2]} class="letter"/>
				<Image src={A} alt="A" height="310" densities={[1.5, 2]} class="letter"/>
				<Image src={L} alt="L" height="310" densities={[1.5, 2]} class="letter"/>
				<Image src={D} alt="D" height="310" densities={[1.5, 2]} class="letter"/>
			</div>
			<div class="nachname">
				<Image src={J} alt="J" height="310" densities={[1.5, 2]} class="letter"/>
				<Image src={A2} alt="A" height="310" densities={[1.5, 2]} class="letter"/>
				<Image src={N} alt="N" height="310" densities={[1.5, 2]} class="letter"/>
				<Image src={Z} alt="Z" height="310" densities={[1.5, 2]} class="letter"/>
			</div>
		</div>
		<div class="">
			
		</div>
	</main>
</Layout>

<style>
	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
		font-family: 'Open Sans', sans-serif;
	}
	body {
		max-width: 100vw;
		margin: 0;
		padding: 0;
	}
	main {
		margin: 0 auto;
		width: 100%;
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.nav {
		width: 100%;
		height: 100vh;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
	}
	.vorname, .nachname {
		margin: 0 auto;
		display: flex;
	}
	.letter {

	} 
</style>
