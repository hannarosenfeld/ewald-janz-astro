---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import { Image } from 'astro:assets';
import E from "../../public/images/nav-images/1-E.png"
import W from "../../public/images/nav-images/2-W.png"
import A from "../../public/images/nav-images/3-A.png"
import L from "../../public/images/nav-images/4-L.png"
import D from "../../public/images/nav-images/5-D.png"
import J from "../../public/images/nav-images/6-J.png"
import A2 from "../../public/images/nav-images/7-A.png"
import N from "../../public/images/nav-images/8-N.png"
import Z from "../../public/images/nav-images/9-Z.png"

import Eworks from "../../public/images/nav-images/E-works.jpg"
---

<Layout title="Ewald Janz">
	<main>
		<div class="nav">
			<div class="vorname">
				<Image src={E} alt="E" height="320" densities={[1.5, 2]} class="letter"/>
				<Image src={W} alt="W" height="320" densities={[1.5, 2]} class="letter"/>
				<Image src={A} alt="A" height="320" densities={[1.5, 2]} class="letter"/>
				<Image src={L} alt="L" height="320" densities={[1.5, 2]} class="letter"/>
				<Image src={D} alt="D" height="320" densities={[1.5, 2]} class="letter"/>
			</div>
			<div class="nachname">
				<Image src={J} alt="J" height="320" densities={[1.5, 2]} class="letter"/>
				<Image src={A} alt="A" height="320" densities={[1.5, 2]} class="letter"/>
				<Image src={N} alt="N" height="320" densities={[1.5, 2]} class="letter"/>
				<Image src={Z} alt="Z" height="320" densities={[1.5, 2]} class="letter"/>
			</div>
		</div>
	</main>
</Layout>

<style>
	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
		font-family: 'Open Sans', sans-serif;
	}
	body {
		max-width: 100vw;
		/* border: 2px solid red; */
	}
	main {
		/* border: 2px solid darkgoldenrod; */
		margin: 0 auto;
		width: 100%;
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.nav {
		width: 100%;
		max-height: 100vh;
		margin: 0 auto;
		/* border: 2px solid darkcyan; */
		display: flex;
		flex-direction: column;
	}
	.vorname, .nachname {
		height: 48vh;
		margin: 0 auto;
		/* border: 2px solid darkorange; */
	}
	.letter {

	} 

	@media screen and (max-width: 768px) {
		.letter {
		height: 160px;
			}
	}

    @media screen and (max-width: 480px) {
		.letter {
			width: 3.2em;
		}
		.vorname,.nachname {
			/* border: 2px solid green; */
			height: 10em;
		}
		.nav {
			/* border: 2px solid red; */
			/* height: 98vh; */
			display: flex;
			justify-content: center;
		}
		main {
			/* border: 2px solid blue; */
			height: 98vh;
			display: flex;
			justify-content: center;
		}
	}
</style>
